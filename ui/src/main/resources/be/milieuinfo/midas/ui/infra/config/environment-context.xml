<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="environmentDependentPropertyPlaceHolderConfigurer"
          class="be.milieuinfo.core.spring.EnvironmentDependentPropertyPlaceholderConfigurer">
        <property name="machineName" ref="machineName"/>
        <property name="environment" ref="environmentName"/>
        <property name="locations">
            <list>
                <value>classpath:/application.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="ignoreResourceNotFound" value="false"/>
    </bean>

    <beans profile="lokaal">
        <bean id="machineName" class="java.lang.String">
            <constructor-arg value="localhost"/>
        </bean>
        <bean id="environmentName" class="java.lang.String">
            <constructor-arg value="ontwikkel"/>
        </bean>
    </beans>

    <beans profile="server">
        <bean id="environmentName" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:comp/env/environment"/>
            <property name="expectedType" value="java.lang.String"/>
            <property name="lookupOnStartup" value="true"/>
        </bean>

        <bean id="machineName" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:comp/env/machineName"/>
            <property name="expectedType" value="java.lang.String"/>
            <property name="lookupOnStartup" value="true"/>
        </bean>
    </beans>
</beans>